 "html": "\n<style type=\"text/css\">\n    p{\n        font-size: 10px;\n    }\n    .topbottom {\n    border-top: 0; border-bottom: 0; padding-top: 0!important; padding-bottom: 0!important; margin:0!important; border-spacing: 0!important;\n}\n.tbspace > tbody > tr > td{ \n        padding: 0 2px 0 2px!important; margin:0!important; border-spacing: 0!important;\n        }\n</style>\n<div id=\"header-html\" class=\"hidden-pdf\">\n    {% if letter_head and not no_letterhead %}\n        <div class=\"letter-head\">{{ letter_head }}</div>\n    {% else %}\n        <div> </br></br></br></br></br></div>\n    {% endif %}\n</div>\n<p align=\"center\">\n    <strong>{{ doc.select_print_heading or 'PERFORMA INVOICE'}}</strong>    \n</p>\n<table border=\"1\" cellspacing=\"0\" cellpadding=\"0\" width=\"100%\" class=\"tbspace\">\n    <tbody>\n        <tr>\n            <td width=\"51%\" colspan=\"3\" rowspan=\"2\" valign=\"top\">\n                <p>\n                    <strong>{{ doc.company }}</strong>\n                </p>\n                <p>\n                   {{ doc.company_address_display }}\n                </p>\n            </td>\n            <td width=\"49%\" colspan=\"6\" valign=\"top\">\n                <p>\n                    <strong>Invoice No. {{ doc.name }} </strong>\n                </p>\n                <p>\n                   <strong> Date : {{ doc.get_formatted(\"transaction_date\") }}</strong>\n                </p>\n            </td>\n            <!-- <td width=\"18%\" colspan=\"2\" valign=\"top\">\n                <p>\n                    <strong>Buyer's Order No.{{ doc.po_no or '' }}</strong>\n                </p>\n                <p>\n                     Date: {{ doc.get_formatted(\"po_date\") or '' }}\n                </p>\n               \n            </td> -->\n        </tr>\n        <tr>\n            <td width=\"49%\" colspan=\"6\" valign=\"top\">\n                 <p>\n                    <strong>Exporter's Ref. No.</strong>\n                </p>\n                <p>\n                </p>\n            </td>\n        </tr>\n        <tr>\n            <td width=\"51%\" colspan=\"3\" valign=\"top\">\n                <p>\n                    <strong>Invoice To</strong>\n                </p>\n                <p>{{ doc.customer_name or \"\" }}</p>\n                <p>{{ doc.address_display or ''}}</p>\n               \n            </td>\n            <td width=\"49%\" colspan=\"6\" valign=\"top\">\n                <p>\n                <strong>Dispatch to</strong></p>\n                <p>\n                    <strong>{{ doc.consignee_name or '' }}</strong>\n                </p>\n                <p>\n                    {{ doc.shipping_address or '' }}\n                </p>\n            </td>\n        </tr>\n        <tr>\n            <td colspan=\"1\" valign=\"top\">\n                <p>\n                    <strong>Pre-Carriage by</strong>\n                    <br/>\n                    {{ doc.pre_carriage_by or '' }}\n                </p>\n            </td>\n            <td colspan=\"2\" valign=\"top\">\n                <p><strong>Delivery Terms</strong></p>\n                <p>\n                    {{ doc.shipping_terms or ''}}\n                </p>\n            </td>\n            <td colspan=\"2\" valign=\"top\">\n                <p>\n                    <strong>Country of Origin</strong>\n                </p>\n                <p>\n                    {{ doc.country_of_origin or '' }}\n                </p>\n            </td>\n            <td width=\"25%\" colspan=\"4\" valign=\"top\">\n                <p>\n                    <strong>Country of Destination</strong>\n                </p>\n                <p>\n                    {{ doc.country_of_destination or '' }}\n                </p>\n            </td>\n        </tr>\n        <tr>\n            <td width=\"24%\" colspan=\"1\" valign=\"top\">    \n               <p>\n                    <strong>Port of Loading</strong>\n                </p>\n                <p>\n                    {{ doc.port_of_loading or '' }}\n                </p>\n            </td>\n            <td width=\"26%\" colspan=\"2\" valign=\"top\">\n                 <p>\n                    <strong>Port of Discharge</strong>\n                </p>\n                <p>\n                    {{ doc.port_of_discharge or '' }}\n                </p>\n                \n            </td>\n            <td width=\"48%\" colspan=\"6\" rowspan=\"2\" valign=\"top\">\n                <p>\n                    <strong>Terms of Payment</strong>\n                </p>\n                <p>\n                {{ doc.payment_terms_template or '' }}</p>\n               \n                \n            </td>\n        </tr>\n        <tr>\n        \n        </tr>\n        <tr>\n            <td  valign=\"top\" width=\"50%\">\n                <p align=\"center\">\n                    <strong>DESCRIPTION</strong>\n                </p>\n            </td>\n            <td valign=\"top\">\n                <p align=\"center\">\n                    <strong>Total Packages</strong>\n                </p>\n            </td>\n            <td  valign=\"top\">\n                <p align=\"center\">\n                    <strong>Packaging Size</strong>\n                </p>\n            </td>\n            \n            <td  valign=\"top\" width=\"10%\">\n                <p align=\"center\">\n                    <strong>Qty</strong>\n                </p>\n            </td>\n            \n            <td  valign=\"top\" width=\"10%\">\n                <p align=\"center\">\n                    <strong>Rate</strong>\n                </p>\n            </td>\n            <td  valign=\"top\" colspan=\"4\">\n                <p align=\"center\">\n                    <strong>Amount</strong>\n                </p>\n            </td>\n        </tr>\n        {%- for row in doc.items -%}    \n        <tr>\n            <td class=\"topbottom\"  valign=\"top\" width=\"50\">\n                <p>\n                    {{ row.item_name or '' }}<br>\n                </p>\n            </td>\n            <td class=\"topbottom\" valign=\"top\">\n               <p align=\"center\"> {{ row.no_of_packages or ''}}</p>\n            </td>\n            <td class=\"topbottom\" valign=\"top\">\n                <p align=\"center\">\n                    {{ row.packing_size or ''}}\n                </p>\n            </td>\n            \n            <td class=\"topbottom\"  valign=\"top\" width=\"10%\">\n                <p align=\"right\">{{ row.qty or '' }} {{ row.stock_uom or '' }}</p>\n            </td>\n            \n            <td class=\"topbottom\" width=\"10%\"  valign=\"top\">\n                <p align=\"right\">\n                    {{ row.get_formatted(\"rate\", doc) or ''}}\n                </p>\n            </td>\n            <td class=\"topbottom\"  valign=\"top\" colspan=\"4\">\n                <p align=\"right\">\n                    {{ row.get_formatted(\"amount\", doc) or ''}}\n                </p>\n            </td>\n        </tr> \n        {% endfor %}\n        <tr>\n            <td></td>\n            <td></td>\n            <td></td>\n            <td></td>\n            <td></td>\n            <td></td>\n        </tr>\n        <tr>\n            \n            <td class=\"topbottom\" width=\"7%\" valign=\"top\">\n            </td>\n            <td class=\"topbottom\" width=\"7%\" valign=\"top\">\n            </td>\n          \n            <td class=\"topbottom\" width=\"7%\" valign=\"top\">     \n            </td>\n            <td class=\"topbottom\" width=\"41%\" colspan=\"2\" valign=\"top\">\n               {%- for row1 in doc.taxes -%}\n                    <p align=\"right\">\n                        <strong> {{ row1.description }} \n                        </strong>\n                    </p>\n                {% endfor %}\n            <!--</td>-->\n            <!--<td class=\"topbottom\" width=\"15%\" valign=\"top\">-->\n                \n            <!--</td>-->\n            \n            <!--<td class=\"topbottom\" width=\"15%\" colspan=\"2\" valign=\"top\">-->\n                \n            <!--</td>-->\n            <td class=\"topbottom\" width=\"15%\" valign=\"top\">\n                {%- for row1 in doc.taxes -%}\n                    <p align=\"right\">\n                        <strong> {{ row1.get_formatted(\"tax_amount\") }} \n                        </strong>\n                    </p>\n                {% endfor %}\n            </td>\n        </tr>\n        {%- if doc.material_are_of_industrial_grade == 1-%}\n        <tr>\n            <td width=\"19%\"  valign=\"top\">\n               \n            </td>\n            <td width=\"39%\" colspan=\"4\" valign=\"top\">\n                <p align=\"center\" style=\"color: red;\">\n                   <strong>All the above items  are Industrial Grade</strong> \n                </p>   \n            </td>\n            \n            <td width=\"26%\" colspan=\"3\" valign=\"top\">\n                \n            </td>\n            <td width=\"13%\" valign=\"top\">\n                <p align=\"right\">\n                   \n                </p>\n            </td>\n        </tr>\n        {%- endif-%}\n        <tr>\n            <td width=\"19%\" valign=\"top\" style=\"border-right: 0 !important;\">\n                <p align=\"right\">Total </p>\n            </td>\n            <td width=\"15%\"  colspan=\"3\" valign=\"top\" colspan=\"3\">\n                <p align=\"right\">\n                    <strong>{{ doc.total_qty or '' }} </strong>\n                   \n                </p>\n            </td>\n            <td width=\"13%\" valign=\"top\" colspan=\"7\">\n                <p align=\"right\">\n                    <strong>{{ doc.get_formatted(\"grand_total\", doc) or '' }}</strong>\n                    <strong></strong>\n                </p>\n            </td>\n        </tr>\n        <tr>\n            <td colspan=\"9\" style=\"border-bottom: 0!important\">\n                <p>Amount Chargeable\n                (in words) : </p> <p><b><!-- {{ frappe.utils.money_in_words(doc.grand_total) }} -->{{ doc.in_words }}</b></p>\n                <p>\n                    {{ doc.shipping_instructions or ''}}\n\n                </p>\n                {%- if doc.notes -%}\n                <p>\n                    NOTE:{{ doc.notes }}\n                </p>\n                {%- endif -%}\n            </td>\n        </tr>\n        <tr>\n            <td colspan=\"1\" valign=\"bottom\" >\n              \n                <p>\n                   <strong>BANK DETAILS:</strong> <br>\n                    A/C NAME: {{ doc.company }}<br>\n                    {% if frappe.db.get_value(\"Bank Account\",{ 'name':doc.bank_account},'bank_account_no') %}\n                        NO. : {{ frappe.db.get_value(\"Bank Account\",{ 'name':doc.bank_account},'bank_account_no') or \"\" }}<br>\n                    {% endif %}\n                </p>\n                \n            </td>\n            <td colspan=\"3\" valign=\"bottom\">\n                <p><strong>BUYER SIGNATURE & SEAL</strong></p>\n                <br><br><br><br>\n                <p><strong>Date :</strong></p>\n            </td>\n            <td colspan=\"5\" valign=\"bottom\">\n                <p>\n                    <strong>SELLER SIGNATURE & SEAL</strong>\n                </p>\n<br><br><br><br>\n<p><strong>Date :</strong></p>\n                \n            </td>\n        </tr>\n        <tr>\n            <td width=\"100%\" colspan=\"9\" valign=\"bottom\" style=\"border-top: 0!important\">\n                All the particulars in this invoice are true and correct.\n            </td>\n        </tr>\n    </tbody>\n</table>\n\n<div id=\"footer-html\" class=\"visible-pdf\">\n    {% if not no_letterhead and footer %}\n        <div class=\"letter-head-footer\">\n            {{ footer }}\n        </div>\n    {% endif %}\n</div>",
